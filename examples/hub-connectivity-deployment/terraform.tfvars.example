# Example terraform.tfvars for Hub Connectivity Deployment
# Copy this file to terraform.tfvars and customize the values

# Required: Hub subscription ID
hub_subscription_id = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Azure region
location = "East US"

# Project configuration
project_name = "aiml-lz"
environment  = "poc"

# Networking configuration
hub_vnet_address_space                     = "10.0.0.0/16"
firewall_subnet_address_prefix             = "10.0.1.0/24"
shared_services_subnet_address_prefix      = "10.0.2.0/24"
gateway_subnet_address_prefix              = "10.0.3.0/24"

# Azure Firewall configuration
firewall_sku_name = "AZFW_VNet"
firewall_sku_tier = "Standard"

# Additional tags
tags = {
  Owner       = "Platform Team"
  CostCenter  = "IT-Infrastructure"
  Purpose     = "AI-ML-Landing-Zone-POC"
}