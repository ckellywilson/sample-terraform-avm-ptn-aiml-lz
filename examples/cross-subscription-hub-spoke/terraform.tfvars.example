# Example terraform.tfvars for Cross-Subscription Hub-Spoke Configuration

# Hub Subscription (Connectivity/Platform Landing Zone)
hub_subscription_id     = "12345678-1234-1234-1234-123456789abc"  # Replace with actual hub subscription ID
hub_resource_group_name = "rg-connectivity-dns-eastus2"           # Replace with actual hub DNS resource group
hub_vnet_id            = "/subscriptions/12345678-1234-1234-1234-123456789abc/resourceGroups/rg-connectivity-network-eastus2/providers/Microsoft.Network/virtualNetworks/vnet-hub-eastus2"

# Spoke Subscription (Application Workload)
spoke_subscription_id   = "87654321-4321-4321-4321-210987654321"  # Replace with actual spoke subscription ID
spoke_resource_group_name = "rg-aiml-workload-eastus2"

# Network Configuration
spoke_vnet_address_space = "10.100.0.0/16"
private_endpoints_subnet_address_prefix = "10.100.1.0/24"

# Project Configuration
project_name = "aiml-hub-spoke"
environment  = "dev"
location     = "East US 2"

