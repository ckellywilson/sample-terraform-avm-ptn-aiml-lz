# Example variable values for the AI/ML Landing Zone with existing hub deployment

# Basic Configuration
location    = "East US 2"
name_prefix = "aiml"

# Network Configuration
ai_lz_vnet_address_space = "192.168.0.0/23"

# Existing Hub Configuration (REQUIRED)
existing_hub_resource_group_name = "rg-connectivity-eastus2"
existing_hub_vnet_name           = "vnet-hub-eastus2"

# Hub DNS Configuration (optional)
hub_dns_servers = []  # Leave empty to use Azure default DNS, or specify hub DNS servers like ["10.0.1.4", "10.0.1.5"]

# Hub Firewall Configuration (optional)
hub_firewall_ip_address = null  # "10.0.2.4"  # Set to hub firewall private IP for internet traffic routing

# VNet Peering Configuration
create_reverse_peering = false  # Set to true if you have permissions to create peering on the hub side

enable_hub_peering_settings = {
  allow_forwarded_traffic       = true
  use_remote_gateways          = false  # Set to true if hub has VPN/ExpressRoute gateway
  allow_gateway_transit_on_hub = true   # Allow AI/ML LZ to use hub's gateways in the future
}

# Private DNS Zones Configuration (optional) 
# If your hub already has private DNS zones, specify them here to avoid duplicates
# This provides centralized DNS management and is the recommended enterprise pattern
existing_private_dns_zones = {
  resource_group_name          = null  # "rg-connectivity-eastus2"  # Uncomment and set if using existing zones
  blob_zone_name               = null  # "privatelink.blob.core.windows.net"
  file_zone_name               = null  # "privatelink.file.core.windows.net"
  queue_zone_name              = null  # "privatelink.queue.core.windows.net"
  table_zone_name              = null  # "privatelink.table.core.windows.net"
  vault_zone_name              = null  # "privatelink.vaultcore.azure.net"
  search_zone_name             = null  # "privatelink.search.windows.net"
  cosmos_zone_name             = null  # "privatelink.documents.azure.com"
  cognitive_zone_name          = null  # "privatelink.cognitiveservices.azure.com"
  openai_zone_name             = null  # "privatelink.openai.azure.com"
  container_registry_zone_name = null  # "privatelink.azurecr.io"
}

# Telemetry (optional)
enable_telemetry = true

# Tags (optional)
tags = {
  Environment = "dev"
  Project     = "ai-ml-landing-zone"
  ManagedBy   = "terraform"
  Pattern     = "hub-spoke"
  CostCenter  = "IT"
}